{
  "name": "toggl-board",
  "version": "0.1.0",
  "description": "Web application to manage the TogglBoard device.",
  "scripts": {
    "build": "echo \"Error: no build specified\" && exit 1",
    "serve": "npm start",
    "start": "ts-node src/server.ts",
    "test": "jest --verbose",
    "watch-test": "npm run test -- --watchAll",
    "docker-build": "docker build -t nevilles/toggl-board .",
    "docker-run": "docker run -p 9292:8080 --env-file .env nevilles/toggl-board"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NevilleS/toggl-board.git"
  },
  "author": "Neville Samuell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NevilleS/toggl-board/issues"
  },
  "homepage": "https://github.com/NevilleS/toggl-board#readme",
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "^23.3.8",
    "@types/supertest": "^2.0.6",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^1.6.6",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.*"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "@types/dedent": "^0.7.0",
    "dedent": "^0.7.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4"
  }
}
