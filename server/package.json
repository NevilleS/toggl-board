{
  "name": "toggl-board-server",
  "version": "1.0.0",
  "engines": {
    "node": "14.x"
  },
  "description": "Web server to manage the TogglBoard device.",
  "scripts": {
    "build": "echo \"Error: no build specified\" && exit 1",
    "serve": "npm start",
    "start": "ts-node src/server.ts",
    "test": "jest --verbose",
    "watch-test": "npm run test -- --watchAll",
    "docker-build": "docker build -t nevilles/toggl-board .",
    "docker-run": "docker run -p 9292:8080 --env-file .env nevilles/toggl-board"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NevilleS/toggl-board.git"
  },
  "author": "Neville Samuell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NevilleS/toggl-board/issues"
  },
  "homepage": "https://github.com/NevilleS/toggl-board#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/dedent": "^0.7.0",
    "@types/eventsource": "^1.1.5",
    "@types/express": "^4.17.9",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/supertest": "^2.0.10",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^12.0.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "automock": false,
    "resetMocks": true,
    "globals": {
      "ts-jest": {}
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "testMatch": [
      "**/test/**/*.test.*"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "dedent": "^0.7.0",
    "dotenv": "^8.2.0",
    "eventsource": "^2.0.2",
    "express": "^4.17.1",
    "lodash": "^4.17.21"
  }
}
