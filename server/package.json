{
  "name": "toggl-board-server",
  "version": "0.1.0",
  "description": "Web server to manage the TogglBoard device.",
  "scripts": {
    "build": "echo \"Error: no build specified\" && exit 1",
    "serve": "npm start",
    "start": "ts-node src/server.ts",
    "test": "jest --verbose",
    "watch-test": "npm run test -- --watchAll",
    "docker-build": "docker build -t nevilles/toggl-board .",
    "docker-run": "docker run -p 9292:8080 --env-file .env nevilles/toggl-board"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NevilleS/toggl-board.git"
  },
  "author": "Neville Samuell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NevilleS/toggl-board/issues"
  },
  "homepage": "https://github.com/NevilleS/toggl-board#readme",
  "devDependencies": {
    "@types/debug": "0.0.31",
    "@types/dedent": "^0.7.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "@types/supertest": "^2.0.7",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^2.1.0",
    "jest-junit": "^5.2.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "automock": false,
    "resetMocks": true,
    "globals": {
      "ts-jest": {}
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "testMatch": [
      "**/test/**/*.test.*"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "dedent": "^0.7.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11"
  }
}
